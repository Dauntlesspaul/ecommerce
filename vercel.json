{
  "builds": [
    {
      "source": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/build"
      }
    },
    {
      "source": "server/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "source": "/server/(.*)", "destination": "/api/server.js" },
    { "source": "/(.*)", "destination": "client/build/$1" }
  ]
}
